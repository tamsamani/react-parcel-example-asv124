{
	"compilerOptions": {
		"outDir": "./dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "es6",
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": true,
		"jsx": "react",
		"jsxFactory": "h",
		"extensions": {
			"**/*.ts": "TS",
			"**/*.js": "JS",
			"src/**/*.js": "TS" // treat all JS files inside src as TS
		}
	},
	"include": [
		"./src/**/*"
	]
}